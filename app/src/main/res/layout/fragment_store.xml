<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical">
        <TextView
            android:textColor="@android:color/holo_blue_light"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginStart="40dp"
            android:layout_gravity="start"
            android:text="@string/list_store"
            android:lines="1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"/>
    <View
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@android:color/holo_blue_light"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_weight="2"
            android:id="@+id/imgLocation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="4dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:src="@drawable/ic_location"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/txtLocation"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/click_location"
            android:textStyle="bold" />
        <ImageView
            android:padding="5dp"
            android:src="@drawable/shoppingcart50"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <androidx.viewpager.widget.ViewPager
            android:layout_margin="10dp"
            android:id="@+id/mViewPagerAd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
            android:id="@+id/mDotsIndicatorAd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_margin="20dp"
            app:dotsColor="@android:color/white"
            app:dotsSpacing="7dp"
            app:selectedDotColor="#0C70C2"
            tools:ignore="MissingConstraints" />
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvStore"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp" />
</LinearLayout>